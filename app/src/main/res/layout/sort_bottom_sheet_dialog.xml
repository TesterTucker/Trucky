<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottomsheet"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvSorting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="15dp"
        android:text="Sort"
        android:textColor="@color/black"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
   />

    <RadioGroup
        android:id="@+id/rgSort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvSorting"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="15dp">

        <RadioButton
            android:id="@+id/A_ZSort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A-Z Sorting"
            />
        <RadioButton
            android:id="@+id/Z_ASort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Z-A Sorting"
            />
        <RadioButton
            android:id="@+id/New_OldSort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New-Old Sorting"
            />
        <RadioButton
            android:id="@+id/Old_NewSort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Old-New Sorting"
            />

    </RadioGroup>

    <ImageView
        android:id="@+id/btnClose"
        app:layout_constraintTop_toTopOf="@+id/tvSorting"
        app:layout_constraintBottom_toBottomOf="@+id/tvSorting"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:padding="10dp"
        android:src="@drawable/ic_baseline_close_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>