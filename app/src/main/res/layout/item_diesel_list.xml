<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_search"
    android:layout_margin="10dp"
    android:paddingVertical="8dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalDivider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".05" />

    <View
        android:layout_width="4dp"
        android:background="@drawable/bg_search"
        android:backgroundTint="#3800B0"
        app:layout_constraintEnd_toStartOf="@id/verticalDivider"
        app:layout_constraintTop_toTopOf="@id/labelDate"
        app:layout_constraintBottom_toBottomOf="@id/labelClientName"
        android:layout_height="0dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelDate"
        app:layout_constraintStart_toStartOf="@id/verticalDivider"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"
        android:text="Date :"
        android:textStyle="bold"
        android:textSize="16sp"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/labelDate"
        android:layout_marginStart="8dp"
        tools:text="29/08/2021"
        android:textSize="14sp"
        android:textColor="#747474"
        app:layout_constraintTop_toTopOf="@id/labelDate"
        app:layout_constraintBottom_toBottomOf="@id/labelDate"
        android:textStyle="normal"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelTruckNo"
        app:layout_constraintStart_toStartOf="@id/verticalDivider"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/labelDate"
        android:textColor="@color/black"
        android:text="Truck No :"
        android:textStyle="bold"
        android:textSize="16sp"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/labelTruckNo"
        android:layout_marginStart="8dp"
        tools:text="UP25DT1511"
        android:textSize="14sp"
        android:textColor="#747474"
        app:layout_constraintTop_toTopOf="@id/labelTruckNo"
        app:layout_constraintBottom_toBottomOf="@id/labelTruckNo"
        android:textStyle="normal"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelClientName"
        app:layout_constraintStart_toStartOf="@id/verticalDivider"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/labelTruckNo"
        android:textColor="@color/black"
        android:text="Pump Name :"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:textSize="16sp"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/labelClientName"
        android:layout_marginStart="8dp"
        tools:text="Varun Bevrage"
        android:textSize="14sp"
        android:textColor="#747474"
        app:layout_constraintTop_toTopOf="@id/labelClientName"
        app:layout_constraintBottom_toBottomOf="@id/labelClientName"
        android:textStyle="normal"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:id="@+id/checkPayments"
        android:background="@drawable/bg_search"
        android:backgroundTint="#B00000"
        android:text="Edit"
        android:textSize="10sp"
        android:textStyle="normal"
        android:layout_marginEnd="8dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        />


</androidx.constraintlayout.widget.ConstraintLayout>